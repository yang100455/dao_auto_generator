<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--
 添加一个maven命令  ：command line : mybatis-generator:generate -e
-->
<generatorConfiguration>
    <!--依赖路径-->
    <classPathEntry
            location="D:\repository\mysql\mysql-connector-java\5.1.30\mysql-connector-java-5.1.30.jar"/>
    <context id="AllpyraTables" targetRuntime="MyBatis3">

        <!-- example插件 -->
        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="Example$"/>
            <property name="replaceString" value="Criteria"/>
        </plugin>

        <!-- 序列化插件 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin">
        </plugin>

        <!-- 配置生成pojo的toString()方法的插件 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- 取消生成的注释 -->
        <!--<commentGenerator>-->
        <!--<property name="suppressAllComments" value="true"/>-->
        <!--<property name="suppressDate" value="true"/>-->
        <!--</commentGenerator>-->

        <!-- 通过type指定自定义的注释 -->
        <commentGenerator type="com.codecoord.config.MyCommentGenerator">
            <!--不要开启，否则将不会使用自定义注释-->
            <!--<property name="suppressAllComments" value="true"/>-->
        </commentGenerator>

        <!--jdbc连接-->
        <jdbcConnection driverClass="org.gjt.mm.mysql.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/morning_star_wms_web?autoReconnect=true"
                        userId="root" password="1234">
        </jdbcConnection>


        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--bean位置-->
        <javaModelGenerator targetPackage="com.morning.star.wms.entity"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--*.xml位置-->
        <sqlMapGenerator targetPackage="com.morning.star.wms.mapper"
                         targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--Mapper.java位置-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.morning.star.wms.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <!-- 表名字 -->
        <table tableName="wms_parcel_predict_items"  domainObjectName="ParcelPredictItems"
               selectByExampleQueryId="false">
            <!--驼峰命名，false去掉下划线，true保留下划线-->
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="orderId" sqlStatement="SELECT LAST_INSERT_ID()" type="post" identity="true"/>

            <!--覆盖text类型为 varchar处理-->
            <!--<columnOverride column="字段名" jdbcType="VARCHAR" />-->
        </table>


    </context>

</generatorConfiguration>